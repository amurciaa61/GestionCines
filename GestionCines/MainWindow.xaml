<Window
    x:Class="GestionCines.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:GestionCines"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DeCine"
    Width="900"
    Height="600"
    Icon="Imagenes/film.ico"
    mc:Ignorable="d">
    <Window.CommandBindings>
        <CommandBinding
            CanExecute="CommandBinding_CanExecute_Salas"
            Command="local:CustomCommands.Salas"
            Executed="CommandBinding_Executed_Salas" />
        <CommandBinding
            CanExecute="CommandBinding_CanExecute_Ayuda"
            Command="local:CustomCommands.Ayuda"
            Executed="CommandBinding_Executed_Ayuda" />
        <CommandBinding
            CanExecute="CommandBinding_CanExecute_Salir"
            Command="local:CustomCommands.Salir"
            Executed="CommandBinding_Executed_Salir" />
    </Window.CommandBindings>
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Command="local:CustomCommands.Salas" Header="S_alas" />
            <MenuItem Command="local:CustomCommands.Ayuda" Header="_Ayuda" />
            <MenuItem Command="local:CustomCommands.Salir" Header="_Salir" />
        </Menu>
    </DockPanel>
</Window>
