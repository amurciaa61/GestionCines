<Window x:Class="GestionCines.Sesiones"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:GestionCines"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Sesiones"
        Width="650"
        Height="450"
        MinWidth="650"
        MinHeight="450"
        mc:Ignorable="d"
        ShowInTaskbar="False"
        Background="#74DDF8">
    <Window.CommandBindings>
        <CommandBinding CanExecute="CommandBinding_CanExecute_Editar"
                        Command="local:CustomCommands.Editar"
                        Executed="CommandBinding_Executed_Editar" />
        <CommandBinding Command="local:CustomCommands.Insertar"
                        Executed="CommandBinding_Executed_Añadir" />
        <CommandBinding CanExecute="CommandBinding_CanExecute_Editar"
                        Command="local:CustomCommands.Borrar"
                        Executed="CommandBinding_Executed_Borrar" />
        <CommandBinding CanExecute="CommandBinding_CanExecute_GuardarCambios"
                        Command="local:CustomCommands.GuardarCambios"
                        Executed="CommandBinding_Executed_GuardarCambios" />
        <CommandBinding CanExecute="CommandBinding_CanExecute_Cancelar"
                        Command="local:CustomCommands.Cancelar"
                        Executed="CommandBinding_Executed_Cancelar" />
    </Window.CommandBindings>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="250" />
        </Grid.ColumnDefinitions>
        <DockPanel Grid.Column="0">
            <StackPanel DockPanel.Dock="Bottom"
                        Style="{StaticResource StackPanelBottom}">
                <Button Command="local:CustomCommands.Borrar">Borrar</Button>
                <Button Command="local:CustomCommands.Editar">Editar</Button>
                <Button Command="local:CustomCommands.Insertar">Añadir</Button>
            </StackPanel>
            <DataGrid x:Name="sesionesDataGrid"
                      Margin="10,10,0,10"
                      AlternatingRowBackground="LightBlue"
                      AlternationCount="2"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      CanUserDeleteRows="False"
                      ColumnWidth="*"
                      IsReadOnly="True"
                      ItemsSource="{Binding Path=SESIONES}"
                      SelectedItem="{Binding Path=SESIONSELECCIONADA}">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Path=IDSESION}"
                                        Header="ID" />
                    <DataGridTextColumn Binding="{Binding Path=PELICULA.TITULO}"
                                        Header="Película" />
                    <DataGridTextColumn Binding="{Binding Path=SALA.NUMERO}"
                                        Header="Sala" />
                    <DataGridTextColumn Binding="{Binding Path=HORA}"
                                        Header="Hora" />
                </DataGrid.Columns>
            </DataGrid>
        </DockPanel>
        <StackPanel Grid.Column="1"
                    Style="{StaticResource StackPanelEdicion}">
            <TextBlock Text="Id" />
            <TextBox x:Name="idSesionTextBox"
                     IsReadOnly="True"
                     Text="{Binding Path=SESIONFORMULARIO.IDSESION, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock Text="Pelicula" />
            <ComboBox x:Name="peliculaComboBox"
                      DisplayMemberPath="TITULO"
                      ItemsSource="{Binding Path=PELICULAS}"
                      SelectedValue="{Binding Path=SESIONFORMULARIO.PELICULA, UpdateSourceTrigger=PropertyChanged}"
                      SelectedValuePath="PELICULA" />
            <TextBlock Text="Sala" />
            <ComboBox x:Name="salaComboBox"
                      DisplayMemberPath="NUMERO"
                      ItemsSource="{Binding Path=SALAS}"
                      SelectedValue="{Binding Path=SESIONFORMULARIO.SALA, UpdateSourceTrigger=PropertyChanged}"
                      SelectedValuePath="SALA" />
            <TextBlock Text="Hora" />
            <TextBox x:Name="horaSesionTextBox"
                     Text="{Binding Path=SESIONFORMULARIO.HORA, UpdateSourceTrigger=PropertyChanged}" />
            <StackPanel HorizontalAlignment="Center"
                        Orientation="Horizontal">
                <Button Command="local:CustomCommands.Cancelar"
                        IsCancel="True">Cancelar</Button>
                <Button Command="local:CustomCommands.GuardarCambios">Guardar</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
